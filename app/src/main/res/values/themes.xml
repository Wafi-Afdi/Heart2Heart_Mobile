<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <!-- Set the background color of the splash screen -->
        <item name="windowSplashScreenBackground">@color/secondary_dark</item>
        <!-- Optional: set an animated icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- Set the theme to transition to after the splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.Heart2Heart</item>
    </style>
    <style name="Theme.Heart2Heart" parent="android:Theme.Material.Light.NoActionBar" />
</resources>